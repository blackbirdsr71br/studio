rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents to any authenticated user.
    // This is a common rule for development but should be more restrictive
    // for production environments.
    match /{document=**} {
      allow read, write: if true; // Allows anyone to read/write, change for production
    }
  }
}
