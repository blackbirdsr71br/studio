
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allows read and write access to all documents for logged-in users.
    // WARNING: This is a permissive rule suitable for development.
    // For production, you should implement more granular security rules
    // to protect your data. For example, only allow users to write to their own data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // You can also lock down specific collections. For example:
    // match /designs/{designId} {
    //   allow read, write: if request.auth != null;
    // }
    // match /savedLayouts/{layoutId} {
    //   allow read, write: if request.auth != null;
    // }
    // match /customComponentTemplates/{templateId} {
    //   allow read, write: if request.auth != null;
    // }
  }
}
